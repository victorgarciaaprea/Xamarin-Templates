{
  "author": "Microsoft",
  "classifications": [
    "android",
    "mobile",
    "xamarin"
  ],
  "description": "A template for creating a Xamarin.Android apps for phones and tablets",
  "name": "Xamarin.Android App",
  "defaultName": "App",
  "identity": "Xamarin.Android.App.CSharp",
  "groupIdentity": "Xamarin.Android.App",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "shortName": "android-app",
  "sourceName": "NewApp",
  "primaryOutputs": [
    {
        "path": "NewApp.csproj"
    },
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "path": "Resources/layout/activity_main.axml"
    },
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "path": "MainActivity.cs"
    },
  ],
  "preferNameDirectory": true,
  "guids": [
    "{710A5ED9-2512-4560-98F3-64957C8C58F3}"
  ],
  "symbols": {
    "kind": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "blank",
      "choices": [
        {
          "choice": "blank",
          "description": "An empty Xamarin.Android app"
        },
        {
          "choice": "single-view",
          "description": "A Xamarin.Android app with a single view"
        },
        {
          "choice": "nav-drawer",
          "description": "A Xamarin.Android app with tabbed navigation"
        },
        {
          "choice": "bottom-nav",
          "description": "A Xamarin.Android app with master-detail navigation"
        }
      ]
    },
    "AndroidSDKVersion": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "AndroidSDKVersion",
      "defaultValue": "v8.1"
    },
    "TargetAndroidAPI": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "TargetAndroidAPI",
      "defaultValue": "27"
    },
    "MinAndroidAPI": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "MinAndroidAPI",
      "defaultValue": "19"
    },
    "SupportLibVersion": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "SupportLibVersion",
      "defaultValue": "27.*"
    },
  },
  "postActions": [
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\" && (kind == \"single-view\"))",
      "description": "Opens content_main.axml in the editor.",
      "manualInstructions": [ ],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "1"
      },
      "continueOnError": true
    },
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\" && (kind == \"single-view\"))",
      "description": "Opens MainActivity.cs in the editor.",
      "manualInstructions": [ ],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "2"
      },
      "continueOnError": true
    }
  ],
  "sources": [
    {
      "source": "./NewApp"
    },
    {
      "source": "../blank",
      "condition": "(kind == \"blank\")"
    },
    {
      "source": "../single-view",
      "condition": "(kind == \"single-view\")"
    },
    {
      "source": "../bottom-nav",
      "condition": "(kind == \"bottom-nav\")"
    },
    {
      "source": "../nav-drawer",
      "condition": "(kind == \"nav-drawer\")"
    }
  ]
}
