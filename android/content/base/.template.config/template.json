{
  "author": "Microsoft",
  "classifications": [
    "android",
    "mobile",
    "xamarin"
  ],
  "description": "A template for creating a Xamarin.Android apps for phones and tablets",
  "name": "Xamarin.Android App",
  "defaultName": "App",
  "identity": "Xamarin.Android.App.CSharp",
  "groupIdentity": "Xamarin.Android.App",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "shortName": "android-app",
  "sourceName": "NewApp",
  "primaryOutputs": [
    {
        "path": "NewApp.csproj"
    },
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "path": "MainActivity.cs"
    },
    {
      "condition": "CreateUITestProject",
      "path": "../NewApp.UITests/NewApp.UITests.csproj"
    }
  ],
  "preferNameDirectory": true,
  "guids": [
    "710A5ED9-2512-4560-98F3-64957C8C58F3",
    "3BC97AEA-CE2A-4B7A-A1B0-7E49B61539EC"
  ],
  "symbols": {
    "kind": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "blank",
      "choices": [
        {
          "choice": "blank",
          "description": "An empty Xamarin.Android app"
        },
        {
          "choice": "single-view",
          "description": "A Xamarin.Android app with a single view"
        },
        {
          "choice": "nav-drawer",
          "description": "A Xamarin.Android app with tabbed navigation"
        },
        {
          "choice": "bottom-nav",
          "description": "A Xamarin.Android app with master-detail navigation"
        },
        {
          "choice": "web-view",
          "description": "Creates an Android WebView App that uses Razor templating engine."
        }
      ]
    },
    "AppIdentifier": {
        "type": "parameter",
        "description": "Overrides the package name in the AndroidManifest.xml",
        "datatype": "string",
        "replaces": "com.companyname.NewApp"
    },
    "AndroidSDKVersion": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "AndroidSDKVersion",
      "defaultValue": "v9.0"
    },
    "TargetAndroidAPI": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "TargetAndroidAPI",
      "defaultValue": "28"
    },
    "MinAndroidAPI": {
      "type": "parameter",
      "datatype": "int",
      "replaces": "MinAndroidAPI",
      "defaultValue": "21"
    },
    "SupportLibVersion": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "SupportLibVersion",
      "defaultValue": "28.0.0.1"
    },
    "IncludeXamarinEssentials": {
        "type": "parameter",
        "dataType": "bool",
        "defaultValue": "true",
        "condition": "(kind != \"web-view\")"
    },
    "XamarinEssentialsSdk": {
      "type": "parameter",
      "dataType": "string",
      "replaces": "XamarinEssentialsSdk",
      "defaultValue": "1.0.1",
      "condition": "(kind != \"web-view\")"
    },
    "CreateUITestProject": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    }
  },
  "postActions": [
    {
      "condition": "(HostIdentifier != \"dotnetcli\" && HostIdentifier != \"dotnetcli-preview\")",
      "description": "Opens MainActivity.cs in the editor.",
      "manualInstructions": [ ],
      "actionId": "84C0DA21-51C8-4541-9940-6CA19AF04EE6",
      "args": {
        "files": "1"
      },
      "continueOnError": true
    }
  ],
  "sources": [
    {
      "source": "./NewApp"
    },
    {
      "source": "../blank",
      "condition": "(kind == \"blank\")"
    },
    {
      "source": "../single-view",
      "condition": "(kind == \"single-view\")"
    },
    {
      "source": "../bottom-nav",
      "condition": "(kind == \"bottom-nav\")"
    },
    {
      "source": "../nav-drawer",
      "condition": "(kind == \"nav-drawer\")"
    },
    {
      "source": "../web-view",
      "condition": "(kind == \"web-view\")"
    },
    {
      "source": "../uitest",
      "target": "../NewApp.UITests/",
      "condition": "CreateUITestProject"
    }
  ]
}
